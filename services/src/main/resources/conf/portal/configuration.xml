<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">

  <component>
    <type>org.exoplatform.addons.georchestra.storage.dao.GeorchestraQueueDAO</type>
  </component>
  <component>
    <type>org.exoplatform.addons.georchestra.storage.GeorchestraQueueStorage</type>
  </component>
  <component>
    <type>org.exoplatform.addons.georchestra.services.GeorchestraService</type>
    <init-params>
      <value-param>
        <name>url</name>
        <value>${org.georchestra.url}</value>
      </value-param>
      <value-param>
        <name>username</name>
        <value>${org.georchestra.username}</value>
      </value-param>
      <value-param>
        <name>password</name>
        <value>${org.georchestra.password}</value>
      </value-param>
    </init-params>
  </component>
  <component>
    <type>org.exoplatform.addons.georchestra.rest.GeorchestraRestService</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.space.spi.SpaceService</target-component>
    <component-plugin>
      <name>GeorchestraSpaceListener</name>
      <set-method>addSpaceListener</set-method>
      <type>org.exoplatform.addons.georchestra.listeners.GeorchestraSpaceListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
    <component-plugin profiles="all">
      <name>AddCronJob</name>
      <set-method>addCronJob</set-method>
      <type>org.exoplatform.services.scheduler.CronJob</type>
      <description>Job to treat Georchestra Queue</description>
      <init-params>
        <properties-param>
          <name>cronjob.info</name>
          <description>Configuration for queue messages processing</description>
          <property name="jobName" value="GeorchestraQueueJob"/>
          <property name="groupName" value="Georchestra"/>
          <property name="job" value="org.exoplatform.addons.georchestra.job.GeorchestraQueueJob"/>
          <property name="expression" value="${org.geochestra.queue.job.expression:0 0/5 * * * ?}"/>
          <!-- Runs every 5 minutes -->
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
